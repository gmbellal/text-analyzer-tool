{
    "name": "text-analyzer-tool",
    "version": "1.0.0",
    "description": "A text analysis tool with API throttling, OAuth2.0 authentication, and log visualization.",
    "main": "dist/app.js",
    "scripts": {
        "start": "ts-node src/app.ts",
        "dev": "nodemon",
        "watch-node": "nodemon dist/app.js",
        "watch": "concurrently \"npm run watch-ts\" \"npm run watch-node\"",
        "build": "tsc --build",
        "watch-ts": "tsc -w",
        "start-production": "forever start dist/app.js",
        "stop-production": "forever stop dist/app.js"
    },
    "dependencies": {
        "@types/bcrypt": "^5.0.2",
        "@types/jsonwebtoken": "^9.0.8",
        "bcrypt": "^5.1.1",
        "dotenv": "^10.0.0",
        "express": "^4.17.1",
        "jsonwebtoken": "^9.0.2",
        "mongoose": "^6.0.0",
        "ms": "^2.1.3",
        "winston": "^3.17.0",
        "ioredis": "^5.5.0",
        "rate-limiter-flexible": "^2.0.4"
    },
    "devDependencies": {
        "@types/express": "^4.17.13",
        "@types/node": "^16.11.7",
        "nodemon": "^3.1.9",
        "ts-node": "^10.9.2",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^4.9.5",
        "@types/winston": "^2.4.4",
        "@types/ioredis": "^5.0.0",
        "concurrently": "^5.3.0"
    }
}
